<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="DB2Tables" targetRuntime="MyBatis3">
        <!-- 清除注释信息 -->
        <commentGenerator>
            <property name="suppressAllComments" value="true" />
        </commentGenerator>

        <!-- step1: 配置数据库连接信息 -->
        <!-- <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/mysql?serverTimezone=UTC"
                        userId="user_ph"
                        password="Jsxzboc01!!">
        </jdbcConnection>-->
        <jdbcConnection driverClass="oracle.jdbc.OracleDriver"
                        connectionURL="jdbc:oracle:thin:@localhost:1521/orclpdb"
                        userId="user_ph"
                        password="ph">
        </jdbcConnection>
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <!-- step2: 指定java bean生成的位置
            targetProject 指的是 哪个项目
            targetPackage 指的是 项目中的路径
        -->
        <javaModelGenerator targetPackage="org.ph.ssm.ZJJGWeb.bean" targetProject=".\src">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <!-- step3：指定sql映射文件生成的位置 -->
        <sqlMapGenerator targetPackage="org.ph.ssm.ZJJGWeb.mapper" targetProject=".\src\resources\mappers">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <!-- step4: 指定接口生成的位置 -->
        <javaClientGenerator type="XMLMAPPER" targetPackage="org.ph.ssm.ZJJGWeb.dao" targetProject=".\src">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <!-- step5: 指定表的生成策略
            tableName 指定表名
            domainObjectName 指定表对应的 实体类的名字
        -->
        <table tableName="xzhouse_menu" domainObjectName="XzhouseMenu"></table>
    </context>
</generatorConfiguration>
